@model CarSelling.Models.Brand

@{
    ViewData["Title"] = "Create New Brand";
}

<h1>Create New Brand</h1>

<form asp-action="Add">
    <div class="form-group py-2">
        <label asp-for="Name" class="control-label">Име</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group py-2">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group py-2">
        <label asp-for="ImgUrl" class="control-label">Линк към снимка</label>
        <input asp-for="ImgUrl" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>

    <div class="form-group py-3">
        <input type="submit" value="Създай" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Върни се към брандовете</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}