@model CarSelling.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<h1>Изтрий кола: @Model.Brand.Name @Model.Model</h1>

<div>
    <h4>Сигурни ли сте, че искате да изтриете тази кола?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Име</dt>
            <dd class="col-sm-10">
                @Model.Brand.Name
            </dd>

            <dt class="col-sm-2">
                Модел
            </dt>
            <dd class="col-sm-10">
                @Model.Model
            </dd>

            <dt class="col-sm-2">
                Обявата е създадена на
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")
            </dd>

            <dt class="col-sm-2">
                Описание
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Html.DisplayFor(model => model.Description)
                }
                else
                {
                    <span>Няма описание за тази кола</span>
                }
            </dd>

            <dt class="col-sm-2">
                Снимка
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                    <img src="@Model.ImgUrl" alt="@Model.Model" style="max-width: 500px;" />
                }
                else
                {
                    <span>Няма изображение</span>
                }
            </dd>
        </dl>
    </div>

    <form asp-action="ConfirmDelete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i>
              Изтрий</button>
        <a href="@Url.Action("Index", "Car")" class="btn btn-secondary"><i class="fa-solid fa-ban"></i>  Отказ</a>
    </form>
</div>